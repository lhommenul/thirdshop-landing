---
import Layout from "@/layouts/default.astro"
import { DEFAULT_LOCALE } from "astro:env/client";

const currentLocale = Astro.currentLocale || DEFAULT_LOCALE;

const app = {
	name: "Open Documentation",
	slug: "open-documentation",
	description: "Create and share beautiful, collaborative documentation with ease.",
	icon: "ðŸ“š",
	features: [
		{
			title: "Real-time Collaboration",
			description: "Work together with your team in real-time. See changes as they happen and collaborate seamlessly."
		},
		{
			title: "Version Control",
			description: "Track every change with built-in version control. Revert to previous versions at any time."
		},
		{
			title: "Markdown Support",
			description: "Write documentation using Markdown with syntax highlighting and live preview."
		},
		{
			title: "Open Source",
			description: "Completely open source and free to use. Host it yourself or use our cloud service."
		},
		{
			title: "Beautiful Themes",
			description: "Choose from multiple themes or create your own to match your brand."
		},
		{
			title: "Fast Search",
			description: "Find what you need instantly with our powerful full-text search engine."
		}
	],
	techStack: ["TypeScript", "React", "Node.js", "PostgreSQL", "WebSocket"],
	status: "Beta"
}
---

<Layout>
	<article class="py-8 md:py-12 lg:py-16 max-w-5xl mx-auto" >

		<div class="flex items-center gap-4 mb-6">
			<div>
				<h1 class="text-4xl md:text-5xl lg:text-6xl font-bold font-serif" >{app.name}</h1>
				<span class="inline-block mt-2 px-3 py-1 bg-violet-100 text-violet-700 rounded-full text-sm font-semibold">
					{app.status}
				</span>
			</div>
		</div>

		<p class="text-xl md:text-2xl text-gray-700 mb-8 font-serif">
			{app.description}
		</p>

		<div class="prose prose-lg max-w-none mb-12">
			<h2 class="text-3xl font-bold font-serif mb-4">About</h2>
			<p class="text-gray-700 leading-relaxed">
				Open Documentation is a modern, open-source documentation platform designed for teams who value collaboration and transparency. Built with the latest web technologies, it provides a seamless experience for creating, managing, and publishing documentation.
			</p>
			<p class="text-gray-700 leading-relaxed">
				Whether you're documenting an API, creating user guides, or building a knowledge base, Open Documentation gives you all the tools you need. Our platform is built on open standards and can be self-hosted, giving you complete control over your data.
			</p>
		</div>

		<div class="mb-12">
			<h2 class="text-3xl font-bold font-serif mb-6">Key Features</h2>
			<div class="grid grid-cols-1 md:grid-cols-2 gap-6">
				{
					app.features.map(feature => (
						<div class="border-2 border-gray-200 rounded-lg p-6 hover:border-violet-500 transition-colors">
							<h3 class="text-xl font-bold mb-2">{feature.title}</h3>
							<p class="text-gray-600">{feature.description}</p>
						</div>
					))
				}
			</div>
		</div>

		<div class="mb-12">
			<h2 class="text-3xl font-bold font-serif mb-4">Tech Stack</h2>
			<div class="flex flex-wrap gap-3">
				{
					app.techStack.map(tech => (
						<span class="px-4 py-2 bg-gray-100 rounded-full text-gray-700 font-medium">
							{tech}
						</span>
					))
				}
			</div>
		</div>

		<div class="flex flex-col sm:flex-row gap-4">
			<!-- <a href="#" class="bg-violet-500 hover:bg-violet-600 text-white px-8 py-4 rounded-lg font-bold text-lg transition-colors text-center">
				Get Started
			</a> -->
			<!-- <a href="#" class="bg-gray-200 hover:bg-gray-300 text-gray-800 px-8 py-4 rounded-lg font-bold text-lg transition-colors text-center">
				View on GitHub
			</a> -->
		</div>
	</article>
</Layout>

