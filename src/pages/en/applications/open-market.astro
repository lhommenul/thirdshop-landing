---
import Layout from "@/layouts/default.astro"
import { DEFAULT_LOCALE } from "astro:env/client";

const currentLocale = Astro.currentLocale || DEFAULT_LOCALE;

const app = {
	name: "Open Market",
	slug: "open-market",
	description: "Decentralized marketplace powered by blockchain technology.",
	icon: "ðŸ›’",
	features: [
		{
			title: "Blockchain Verified",
			description: "Every transaction is recorded on the blockchain, ensuring transparency and immutability."
		},
		{
			title: "Smart Contracts",
			description: "Automated escrow and dispute resolution through smart contracts."
		},
		{
			title: "Low Fees",
			description: "No middlemen means lower transaction fees for both buyers and sellers."
		},
		{
			title: "Cryptocurrency Payments",
			description: "Accept payments in various cryptocurrencies with instant settlement."
		},
		{
			title: "Reputation System",
			description: "Build trust with a transparent, blockchain-based reputation system."
		},
		{
			title: "Global Access",
			description: "Sell to anyone, anywhere in the world without geographical restrictions."
		}
	],
	techStack: ["Solidity", "Ethereum", "React", "Web3.js", "IPFS"],
	status: "Coming Soon"
}
---

<Layout>
	<article class="py-8 md:py-12 lg:py-16 max-w-5xl mx-auto" >
		<div class="flex items-center gap-4 mb-6">
			<span class="text-6xl md:text-7xl">{app.icon}</span>
			<div>
				<h1 class="text-4xl md:text-5xl lg:text-6xl font-bold font-serif" >{app.name}</h1>
				<span class="inline-block mt-2 px-3 py-1 bg-blue-100 text-blue-700 rounded-full text-sm font-semibold">
					{app.status}
				</span>
			</div>
		</div>

		<p class="text-xl md:text-2xl text-gray-700 mb-8 font-serif">
			{app.description}
		</p>

		<div class="prose prose-lg max-w-none mb-12">
			<h2 class="text-3xl font-bold font-serif mb-4">About</h2>
			<p class="text-gray-700 leading-relaxed">
				Open Market is a next-generation decentralized marketplace that leverages blockchain technology to create a trustless, transparent trading environment. Say goodbye to high fees, payment processing delays, and centralized control.
			</p>
			<p class="text-gray-700 leading-relaxed">
				Our platform uses smart contracts to automate escrow, handle disputes, and ensure fair transactions between buyers and sellers. Every listing, transaction, and review is permanently recorded on the blockchain, creating an immutable history of commerce.
			</p>
		</div>

		<div class="mb-12">
			<h2 class="text-3xl font-bold font-serif mb-6">Key Features</h2>
			<div class="grid grid-cols-1 md:grid-cols-2 gap-6">
				{
					app.features.map(feature => (
						<div class="border-2 border-gray-200 rounded-lg p-6 hover:border-violet-500 transition-colors">
							<h3 class="text-xl font-bold mb-2">{feature.title}</h3>
							<p class="text-gray-600">{feature.description}</p>
						</div>
					))
				}
			</div>
		</div>

		<div class="mb-12">
			<h2 class="text-3xl font-bold font-serif mb-4">Tech Stack</h2>
			<div class="flex flex-wrap gap-3">
				{
					app.techStack.map(tech => (
						<span class="px-4 py-2 bg-gray-100 rounded-full text-gray-700 font-medium">
							{tech}
						</span>
					))
				}
			</div>
		</div>

		<div class="flex flex-col sm:flex-row gap-4">
			<a href="#" class="bg-gray-400 cursor-not-allowed text-white px-8 py-4 rounded-lg font-bold text-lg text-center">
				Coming Soon
			</a>
			<!-- <a href="#" class="bg-gray-200 hover:bg-gray-300 text-gray-800 px-8 py-4 rounded-lg font-bold text-lg transition-colors text-center">
				View on GitHub
			</a> -->
		</div>
	</article>
</Layout>

